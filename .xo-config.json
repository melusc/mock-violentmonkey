{
	"overrides": [
		{
			"files": ["**/*.ts"],
			"rules": {"@typescript-eslint/indent": "off"}
		}
	],
	"rules": {
		"prefer-template": "error",
		"new-cap": [
			"error",
			{
				"capIsNewExceptionPattern": "^GM"
			}
		],
		"indent": "off",
		"no-mixed-spaces-and-tabs": [
			"off",
			{
				"//": "let prettier handle it, https://prettier.io/docs/en/options.html#tabs"
			}
		]
	}
}
